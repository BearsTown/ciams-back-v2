<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uitgis.ciams.user.mapper.CiamsZoneMapper">

    <sql id="ciams_zone_list_column">
        zone_no
        , zone_name
        , dvs_cd
        , dvs_type
        , mng_cd
        , mng_type
        , use_dist
        , zone_area
        , base_cs_c
        , ita_result
        , ita_re_cd
        , loc_result
        , loc_re_cd
    </sql>

    <sql id="ciams_zone_column">
        zone_no
        , zone_name
        , use_dist
        , zone_area
        , dvs_type
        , dvs_cd
        , mng_type
        , mng_cd
        , local_area
        , local_cs
        , base_cs_c
        , density
        , density_re
        , past_cs_c
        , variation
        , varia_re
        , sss_c
        , sss_rate
        , sss_re
        , ita_result
        , ita_re_cd
        , cs_b
        , cs_b20
        , deterio
        , deterio_re
        , road_a
        , road_rate
        , road_re
        , loc_result
        , loc_re_cd
        , division
        , base_year
        , past_year
    </sql>

    <sql id="ciams_zone_where_search">
        <trim prefix="WHERE" prefixOverrides="AND |OR ">
            <if test="@com.uitgis.ciams.util.ValidUtil@notEmpty(keyword)">
                <bind name="keyword" value="'%' + keyword + '%'"/>
                (
                    zone_name LIKE #{keyword}
                    OR use_dist LIKE #{keyword}
                )
            </if>
            <if test="@com.uitgis.ciams.util.ValidUtil@notEmpty(itaReCd)">
                AND ita_re_cd = #{itaReCd}
            </if>
            <if test="@com.uitgis.ciams.util.ValidUtil@notEmpty(locReCd)">
                AND loc_re_cd = #{locReCd}
            </if>
            <if test="@com.uitgis.ciams.util.ValidUtil@notEmpty(dvsCd)">
                AND dvs_cd = #{dvsCd}
            </if>
            <if test="@com.uitgis.ciams.util.ValidUtil@notEmpty(mngCd)">
                AND mng_cd = #{mngCd}
            </if>
        </trim>
    </sql>


    <select id="countCiamsZone" parameterType="map" resultType="int">
        SELECT
        COUNT(zone_no)
        FROM ciams_zone
        <include refid="ciams_zone_where_search"/>
    </select>


    <!-- 대상지 목록 -->
    <select id="findAllCiamsZones" parameterType="map" resultType="com.uitgis.ciams.user.dto.CiamsZoneDto$Search$Row">
        <include refid="pagination.page_top"/>
        SELECT
        <include refid="ciams_zone_list_column"/>
        FROM ciams_zone
        <include refid="ciams_zone_where_search"/>
        ORDER BY zone_no
        <include refid="pagination.page_bottom"/>
    </select>


    <!-- 대상지 개요 -->
    <select id="findCiamsZoneOverView"
            parameterType="com.uitgis.ciams.user.dto.CiamsZoneDto$Overview$Find$Params"
            resultType="com.uitgis.ciams.user.dto.CiamsZoneDto$Overview$Find$Result">
        SELECT
        <include refid="ciams_zone_column"/>
        FROM ciams_zone
        WHERE zone_no = #{zoneNo}
        LIMIT 1
    </select>

</mapper>
